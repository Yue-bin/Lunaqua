<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Lunaqua.App"
             xmlns:local="using:Lunaqua"
             xmlns:cov="using:Lunaqua.Converters"
             xmlns:sty="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <local:ViewModelLocator x:Key="Locator" />
        <cov:I18NConverter x:Key="I18NConverter" />
        <cov:MathConverter x:Key="MathConverter" />
    </Application.Resources>

    <Application.Styles>
        <sty:FluentAvaloniaTheme />
    </Application.Styles>
    
</Application>